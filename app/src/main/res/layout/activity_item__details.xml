<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_Details">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/applayout"
        android:theme="@style/AppTheme.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ToolbarTheme"
            app:titleTextColor="#000">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_below="@id/applayout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:period="1000"
        app:delay="0"/>
    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"

        android:layout_below="@id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#ffffff"
                    android:padding="20dp"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_name"
                        android:textSize="20dp"
                        android:text="Item Name"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:id="@+id/item_price1"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="PKR 2500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>

                   <LinearLayout

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"></LinearLayout>

                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:text="Wadod Sons"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:id="@+id/shop_location"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="PKR 2500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:onClick="viewOnMap"
                        android:textSize="10dp"
                        android:text="View Location"
                        android:textColor="@color/main_color_icon"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/view_location_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Button>



                    <Button
                        android:textSize="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableTop="@drawable/add_icon"
                        android:padding="5dp"
                        android:text="Compare"
                        android:textColor="@color/main_color_icon"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/view_location_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Button>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:padding="10dp"
                android:layout_marginLeft="0dp"
                android:textSize="18dp"
                android:text="Details:"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:gravity="center_vertical"
                android:text="Category: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></TextView>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/item_cat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:text="Color: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:gravity="center_vertical"

                    android:id="@+id/item_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:text="Price: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:gravity="center_vertical"

                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:text="Size: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:gravity="center_vertical"

                    android:id="@+id/item_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:text="Brand: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></TextView>
                <TextView
                    android:gravity="center_vertical"

                    android:id="@+id/item_brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>

            <LinearLayout
    android:visibility="gone"
    android:layout_marginTop="10dp"
    android:id="@+id/buyer_stuff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/add_item_fav"
        android:textStyle="bold"
        android:textColor="@color/main_color_icon"
        android:text="Add Item To Favourite"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/view_location_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/add_shop_fav"
        android:textStyle="bold"
        android:textColor="@color/main_color_icon"
        android:text="Add Shop To Favourite"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/view_location_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
</LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/seller_stuff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/delete_item"
                    android:text="Delete Item"
                    android:textColor="@color/main_color_icon"
                    android:background="@drawable/view_location_btn_bg"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Button>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <com.victor.loading.rotate.RotateLoading

        android:id="@+id/newton_cradle_loading"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="236dp"
        app:loading_color="@color/main_color_icon"
        app:loading_speed="10" />

</RelativeLayout>